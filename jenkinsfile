pipeline {
    agent any
    environment {
        
         registryCredentials = "nexus"
        registry = "172.17.0.2:8083"
    }
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install --force'
                }
            }
        }
        
                           stage('Unit Test for tournament controllers') {
                    steps {
                        script {
                            sh 'npm run testTournament'
                        }
                    }
                }
                       
                    stage('Build application') {
                        steps {
                            script {
                                sh 'npm run build'
                                    }
                                }
                    }
                    stage('Building DockerImage') {
                    steps {
                        script {
                            sh('docker-compose build')
                        }
                    }
                }

            stage('Nexus deploy') {
                    steps {
                        script {
                                docker.withRegistry("http://"+registry, registryCredentials) {
                                sh "docker tag backed-pipe_main_node_app:latest $registry/backed-pipe_main_node_app:latest"
                            sh('docker push $registry/backed-pipe_main_node_app:latest')
                    }
                }
            }
        }
      
    }
}
