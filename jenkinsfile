pipeline {
    agent any
    environment {
        
         registryCredentials = "nexus"
        registry = "192.168.33.10:8083"
    }
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install --force'
                }
            }
        }
        
                           stage('Unit Test for tournament controllers') {
                    steps {
                        script {
                            sh 'npm run testTournament'
                        }
                    }
                }
               
                       
                    stage('Build application') {
                        steps {
                            script {
                                sh 'npm run build'
                                    }
                                }
                    }
                    stage('Building DockerImage') {
                    steps {
                        script {
                            sh('docker-compose build')
                        }
                    }
                }

 stage('Deploy to Nexus') {
            steps {
                script {
                    docker.withRegistry("http://"+registry, registryCredentials) {
                        sh "docker tag backend-pipe_main_node_app:latest $registry/devops_pipeline_for_backend_adem_node_app:latest"
                        sh "docker push $registry/devops_pipeline_for_backend_adem_node_app:latest"

                    }
                }
            }
        }

           
      
    }
}
