pipeline {
    agent any
    environment {
        nexusRepoUrl = "127.0.0.1:8083"
    }
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install express mongoose --force'
                }
            }
        }
        stage('Unit Test for tournament') {
            steps {
                script {
                    sh 'npm run test'
                }
            }
        }
       
        stage('Build application') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }
      
    }
}
