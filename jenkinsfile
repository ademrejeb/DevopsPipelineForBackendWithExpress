pipeline {
    agent any
    environment {
        
        NODE_VERSION = '20'
    }
    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install --force'
                }
            }
        }
        
       
        stage('Build application') {
            steps {
                script {
                    sh 'npm run build'
                }
            }
        }
      
    }
}
